@inject EdgeFeatureHubConfig EdgeFeatureHubConfig
@inject NavigationManager Navigation
@using FeatureHubSDK

<RouteView RouteData="@RouteData" DefaultLayout="@DefaultLayout" />

@code {
    [Parameter]
    public RouteData RouteData { get; set; }

    [Parameter]
    public Type DefaultLayout { get; set; }

    bool _historyEnabled = false;
    
    protected override async Task OnInitializedAsync()
    {
        var fh = await EdgeFeatureHubConfig.NewContext().Build();
        _historyEnabled = fh["history"].IsEnabled;
        
        if (RouteData.PageType.FullName == "ToDoList_Front.Components.Pages.History" && !_historyEnabled)
        {
            Navigation.NavigateTo("/notfound");
        }
    }
}
